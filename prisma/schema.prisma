// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// generator client is used to generate Prisma Client JS
generator client {
  provider = "prisma-client-js"
}

// generator typegraphql is used to generate TypeGraphQL classes
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// command to push db
// npx prisma db push
model Sport {
  id          Int       @id @default(autoincrement())
  name        String
  main_image  String
  images      String[]  // [] is used to define an array
  description String
  open_time   String
  close_time  String
  slug        String    @unique
  price       PRICE
  items       Item[]    // items is used to define a relation to another model (many)
  location_id Int
  location    Location  @relation(fields: [location_id], references: [id])
  cuisine_id  Int
  cuisine     Type   @relation(fields: [cuisine_id], references: [id])
  reviews     Review[]
  bookings    Booking[]
  tables      Court[]
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
}

model Item {
  id            Int        @id @default(autoincrement())
  name          String
  price         String // price is stored as a string to allow for free text input
  description   String
  sport_id Int
  // sport is used to define a relation to another model
  sport    Sport @relation(fields: [sport_id], references: [id])
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
}

model Location {
  id          Int          @id @default(autoincrement())
  name        String
  sports Sport[]
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
}

model Type {
  id          Int          @id @default(autoincrement())
  name        String
  sports Sport[]
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
}

model User {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  city       String
  password   String
  email      String   @unique
  phone      String
  reviews    Review[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Review {
  id            Int        @id @default(autoincrement())
  first_name    String
  last_name     String
  text          String
  rating        Float
  sport_id Int
  sport    Sport @relation(fields: [sport_id], references: [id])
  user_id       Int
  user          User       @relation(fields: [user_id], references: [id])
}

model Booking {
  id                Int                @id @default(autoincrement())
  number_of_people  Int
  booking_time      DateTime
  booker_email      String
  booker_phone      String
  booker_first_name String
  booker_last_name  String
  booker_occasion   String?
  booker_request    String?
  sport_id     Int
  sport        Sport         @relation(fields: [sport_id], references: [id])
  tables            BookingsOnCourts[]
  created_at        DateTime           @default(now())
  updated_at        DateTime           @updatedAt
}

model Court {
  id            Int                @id @default(autoincrement())
  seats         Int
  sport_id Int
  sport    Sport         @relation(fields: [sport_id], references: [id])
  bookings      BookingsOnCourts[]
  created_at    DateTime           @default(now())
  updated_at    DateTime           @updatedAt
}

model BookingsOnCourts {
  booking_id Int
  booking    Booking  @relation(fields: [booking_id], references: [id])
  table_id   Int
  table      Court    @relation(fields: [table_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@id([booking_id, table_id])
}

// Enum is used to define a set of allowed values
enum PRICE {
  CHEAP
  REGULAR
  EXPENSIVE
}
